---
import Form from "./form/Form.astro";
---

<section id="contact" class="bg-bgCustomWhite bg-bgGridImage pb-32">
  <div class="container">
    <h2 class="section-heading underline-red text-center text-5xl">Kontant</h2>
    <div class="lg:grid lg:grid-cols-2 lg:gap-10 2xl:gap-14">
      <div class="form mb-5">
        <h3 class="mb-5 text-xl font-bold">Formularz kontakowy:</h3>
        <Form />
      </div>
      <div
        class="map rounded-customRadius bg-bgCustomRed p-5 text-slate-200 lg:p-8"
      >
        <h3 class="mb-5 text-xl font-bold">Mapa dojazdu</h3>

        <div class="contact-map mb-5">
          <iframe
            title="map"
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2561.441981286884!2d22.4872152126852!3d50.059283815331995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x473c93ac48a4a5bd%3A0x15388a4b3dfb1435!2sSklep%20W%C4%99dkarski%20%22U%20ADAMA%22!5e0!3m2!1spl!2spl!4v1686224141795!5m2!1spl!2spl"
            width="600"
            height="450"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            class="w-full rounded-customRadius"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
        <dic class="contact-map-info flex flex-col items-start gap-5">
          <p class="group">
            <img
              src="/pin-icon.svg"
              alt="Pin inco"
              class="mr-4 inline-block w-4"
            /><span
              class="inline-block transition-transform duration-300 group-hover:translate-x-3"
              >Marii Konopnickiej 27, 37-200 Przeworsk</span
            >
          </p>
          <a href="mailto:biuro@qbig.com.pl" class="group"
            ><img
              src="/envelope-icon.svg"
              alt="Envelope icon"
              class="mr-4 inline-block w-4"
            /><span
              class="inline-block transition-transform duration-300 group-hover:translate-x-3"
              >biuro@qbig.com.pl</span
            ></a
          >
          <a href="tel:+881 200 108" class="group">
            <img
              src="/phone-icon.svg"
              alt="Phone icon"
              class="mr-4 inline-block w-4"
            /><span
              class="inline-block transition-transform duration-300 group-hover:translate-x-3"
              >881 200 108</span
            ></a
          >
        </dic>
      </div>
    </div>
  </div>
</section>
