---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<details class="accordion my-2">
  <summary
    class="accordion-button flex cursor-pointer items-center rounded-customRadius border-[1px] border-black p-4 transition-colors hover:bg-black hover:text-white"
  >
    <span class="open mr-5">➕</span>
    <span class="close mr-5 hidden">➖</span>
    <span class="title transition-transform">
      {title}
    </span>
  </summary>
  <div class="accordion-content my-5 grid justify-center gap-4">
    <slot />
  </div>
</details>

<style>
  .accordion[open] span.open {
    display: none;
  }
  .accordion[open] span.close {
    display: block;
  }

  .accordion[open] .accordion-button {
    background-color: #000;
    color: #fff;
  }

  .accordion-button:hover .title {
    transform: translateX(10px);
  }

  .accordion-content {
    grid-template-columns: repeat(auto-fill, 250px);
  }
</style>
